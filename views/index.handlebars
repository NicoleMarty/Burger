<div class="container">
    <h2>Eat Da Burger!</h2>
    <div class="row">
        <div class="col s12 m6 l6">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">
                        <h4>Burger Menu</h4>
                    </span>
                    <ul class="list-group">
                        {{#each burger}}
                        {{#unless this.devoured}}
                        <li class="list-group-item">
                            <div class="input-group">
                                <p class="lead">{{this.burger_name}}</p>
                            </div>
                        </li>
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <div class="col s12 m6 l6">
            <h4>Devoured Burgers</h4>
            <ul class="list-group">
                {{#each burger}}
                {{#if this.devoured}}
                <li class="list-group-item">
                    <p class="lead">{{this.burger_name}}</p>
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col s12 m6 l6">
            <h5>Add a Burger</h5>
            <form id="add_burger" class="create-form">
                <div class="form-group">
                    <label for="burger_name">Burger Name:</label>
                    <input type="text" id="burger_name" name="burger">
                    <button id="new_burger" type="submit">Add New Burger Name</button>
                </div>
            </form>
        </div>
        <div class="col s12 m6 l6">
            <h5>Devour a Burger!</h5>
            <form id="devour_burger" class="create-form">
                <div class="form-group">
                    <label for="devoured">Burger to Devour:</label>
                    <input type="text" id="burger_name" name="burger">
                    <button type="submit">Devour it!</button>
                    <div class="hidden">
                        <input type="radio" name="devoured" value="1" checked><br>
                        <input type="radio" name="devoured" value="0">
                    </div>
                </div>
            </form>
            <br>
        </div>
    </div>
</div>