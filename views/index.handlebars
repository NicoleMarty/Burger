<div class="container">
    <h2>Eat Da Burger!</h2>
    <div class="row">
        <div class="col s12 m6 l6">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">
                        <h4>Burger Menu</h4>
                    </span>
                    <ul class="list-group">
                        {{#each burger}}
                        {{#unless this.devoured}}
                        <li>
                            {{burger_name}}

                            <button class="change-devoured" data-id="{{id}}" data-newDevoured="{{devoured}}">
                                {{#if devoured}}Gimme More!{{else}}Eat Me!{{/if}}
                            </button>
                        </li>
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <div class="col s12 m6 l6">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">
                        <h4>Devoured Burgers</h4>
                    </span>
                    <ul class="list-group">
                        {{#each burger}}
                        {{#if this.devoured}}
                        <li>
                            {{burger_name}}

                            <button class="change-devoured" data-id="{{id}}" data-newDevoured="{{devoured}}">
                                {{#if devoured}}Gimme More!{{else}}Eat Me!{{/if}}
                            </button>
                        </li>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s12 m6 l6">
            <h5>Add a Burger</h5>
            <form id="add_burger" class="create-form">
                <div class="form-group">
                    <label for="burger_name">Burger Name:</label>
                    <input type="text" id="burger_name" name="burger">
                    <button id="new_burger" type="submit">Add New Burger Name</button>
                </div>
            </form>
        </div>
        <div class="col s12 m6 l6">
            <h5>Devour a Burger!</h5>
            <form id="devour_burger" class="create-form">
                <div class="form-group">
                    <label for="devoured">Burger to Devour:</label>
                    <input type="text" id="burger_name" name="burger">
                    <button class="change-devoured" type="submit">Devour it!</button>
                </div>
            </form>
            <br>
        </div>
    </div>
</div>